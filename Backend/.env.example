# Environment Variables Configuration
# Copy this file to .env and replace with your values

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/atomjujitsu
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/atomjujitsu

# JWT Secret - Used to sign and verify JWT tokens
# Generate a strong random string (at least 32 characters)
JWT_SECRET=your_strong_jwt_secret_key_here

# Two-Factor Authentication Secret Key
# Used to encrypt/decrypt 2FA secrets in the database
# Generate a strong random string (at least 32 characters)
TWO_FACTOR_SECRET_KEY=your_strong_2fa_encryption_key_here

# Email Configuration (Required for account notifications)
# For Gmail, use your email and an App Password (not your regular password)
# See email-config-guide.md for instructions
EMAIL_USER=your_email@gmail.com
EMAIL_APP_PASSWORD=your_app_password_here

# Environment (development or production)
NODE_ENV=development
